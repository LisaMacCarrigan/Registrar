<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <meta charset="utf-8">
        <title>Registrar's Office</title>
    </head>
    <body>
        <div class="container">
            <h1>{{single_course.getName}}</h1>
            <p><a href="/courses/{{single_course.getId}}/edit">Edit</a></p>
            <form action="/courses/{{single_course.getId}}" method="post">
                <input name="_method" type="hidden" value="delete">
                <button type="submit">Delete This Course</button>
            </form>

            <h3>Add student to course:</h3>
            <form action="/courses/{{single_course.getId}}" method="post">
                <input id="current_course_id" name="current_course_id" type="hidden" value="{{single_course.getId}}">
                <label>Select a student</label>
                <select id="student_id" name="student_id" type="text">
                    {% for current_student in all_students %}
                        <option value="{{current_student.getId}}">{{current_student.getName}}</option>
                    {% endfor %}
                </select>
                <button type="submit">Add</button>
            </form>

            <h3>Roster of students</h3>
            {% for student in students_in_this_course %}
                <p>{{student.getName}}</p>
            {% endfor %}
        </div>
    </body>
</html>
