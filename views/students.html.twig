<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <meta charset="utf-8">
        <title>Registrar's Office</title>
    </head>
    <body>
        <div class="container">
            <h1>Students</h1>
                {% if students is not empty %}
                    <h3>Here are your students!</h3>
                    {% for current_student in students %}
                        <a href="students/{{current_student.getId}}"><p>{{current_student.getName}}</p></a>
                    {% endfor %}
                {% endif %}

            <form action="/students" method="post">
                <label for="name">Student Name:</label>
                <input id="name" type="text" name="student_name">
                <label for="identifier">Date of enrollment:</label>
                <input id="identifier" name="enrollment" type="date">
                <button type="submit">Create Student</button>
            </form>

            <form action="/students/delete" method="post">
                <button type="submit">Delete All Students</button>
            </form>
        </div>
    </body>
</html>